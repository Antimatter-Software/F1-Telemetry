# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build telemetry-server`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t telemetry-server`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system telemetry-server && \
          adduser --system -G telemetry-server telemetry-server

COPY dist/apps/telemetry-server telemetry-server
RUN chown -R telemetry-server:telemetry-server .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix telemetry-server --omit=dev -f install

CMD [ "node", "telemetry-server" ]
